    public static void main(String[] args){
	GreutateSimpla g1 = new GreutateSimpla(5);
        GreutateSimpla g2 = new GreutateSimpla(10);
        GreutateDubla g3 = new GreutateDubla(g1, g2);
        a.adauga(g1);
        a.adauga(g2);
        GreutateMultipla g4 = new GreutateMultipla(a);
        ColectieGreutati colectie = new ColectieGreutati(5);
        colectie.adauga(g1);
        colectie.adauga(g2);
        colectie.adauga(g3);
        colectie.adauga(g4);
        System.out.println("Greutatea medie a colectiei este: " + colectie.medie());
    }
}
